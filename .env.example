# PLANTFOLIO ENVIRONMENT VARIABLES
  # Copy this file to .env.local and fill in your actual values
  # NEVER commit .env.local to git!

  # Supabase Configuration
  # Get these from: https://supabase.com/dashboard → Settings → API
  NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
  NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
  SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

  # Planta API Configuration
  PLANTA_API_BASE_URL=https://public.planta-api.com

  # Sync API Security
  # Generate a secure random key:
  # node -e "console.log('plantfolio-sync-' + require('crypto').randomBytes(32).toString('base64url'))"
  SYNC_API_KEY=plantfolio-sync-YOUR_RANDOM_KEY_HERE

  # Deployment URL
  # Used for SEO metadata and Open Graph social sharing previews
  # Local dev: leave blank (defaults to https://plantfolio-app.vercel.app)
  # Production: set to your deployment URL
  NEXT_PUBLIC_BASE_URL=https://plantfolio-app.vercel.app

  # NOTE: Planta access/refresh tokens are stored in the database (sync_tokens table),
  # not in environment variables. They are managed automatically by the sync endpoint.
